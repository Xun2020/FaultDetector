<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_f1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/fragment2_main"
            android:scaleType="fitStart"/>
        <LinearLayout
            android:id="@+id/button_f21"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/f2_bt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:elevation="3dp"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/mike"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Record"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Record an audio and start diagnosis"
                    android:textSize="12dp"
                    android:textColor="#AAAAAA"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button_f22"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/f2_bt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:elevation="3dp"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/kkk"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Import"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Select a local file and start diagnosis"
                    android:textSize="12dp"
                    android:textColor="#AAAAAA"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>